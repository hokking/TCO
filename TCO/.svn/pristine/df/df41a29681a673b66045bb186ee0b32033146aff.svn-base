<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.tco.cnpt.mapper.CnptMapper">

<!-- 거래처 조회 - 검색 -->
<select id="list" resultType="cnptVO" parameterType="String">
	SELECT CNPT_ID, 
		    CNPT_NM, 
		    CNPT_TEL, 
		    CNPT_MAIL, 
		    CNPT_ZIP, 
		    CNPT_ADDR, 
		    CNPT_DADDR, 
		    CNPT_BANK_NM, 
		    CNPT_ACTNO, 
		    CNPT_ACTNM, 
		    CNPT_CHARGER, 
		    CNPT_YN, 
		    CNPT_BRNO, 
		    CNPT_RPRSV_NM, 
		    CNPT_SE, 
		    CMNCD_CD
	  FROM CNPT
	 WHERE 1 = 1
	 AND CNPT_YN = 'Y'
	 <if test="keyWord!=null and keyWord!=''">
	   AND (
		   CNPT_ID LIKE '%'||#{keyWord}||'%'
		   OR CNPT_NM LIKE '%'||#{keyWord}||'%'
		   OR CNPT_ACTNM LIKE '%'||#{keyWord}||'%'
		   OR CNPT_CHARGER LIKE '%'||#{keyWord}||'%'
	   )
	 </if>
</select>	

<!-- 거래처 등록 -->
<insert id="insert" parameterType="cnptVO">
	<selectKey order="BEFORE" keyProperty="cnptId" resultType="string">
		SELECT 'CNPT' || LPAD(NVL(MAX(TO_NUMBER(SUBSTR(NVL(CNPT_ID, 'CNPT00001'),5))),0)+1,4,'0') FROM CNPT
	</selectKey>
	INSERT INTO CNPT (
		    CNPT_ID, 
		    CNPT_NM, 
		    CNPT_TEL, 
		    CNPT_MAIL, 
		    CNPT_ZIP, 
		    CNPT_ADDR, 
		    CNPT_DADDR, 
		    CNPT_BANK_NM, 
		    CNPT_ACTNO, 
		    CNPT_ACTNM, 
		    CNPT_CHARGER, 
		    CNPT_YN, 
		    CNPT_BRNO, 
		    CNPT_RPRSV_NM, 
		    CNPT_SE, 
		    CMNCD_CD
		    
			) VALUES (
			   #{cnptId},
			   #{cnptNm},
			   #{cnptTel},
			   #{cnptMail},
			   #{cnptZip},
			   #{cnptAddr},
			   #{cnptDaddr},
			   #{cnptBankNm},
			   #{cnptActno},
			   #{cnptActnm},
			   #{cnptCharger},
			   'Y',
			   #{cnptBrno},
			   #{cnptRprsvNm},
			   #{cnptSe},
			   #{cmncdCd}
			)
</insert>

<!-- 거래처 상세조회 -->
<select id="detail" parameterType="String" resultType="cnptVO">
	SELECT CNPT_ID, 
		    CNPT_NM, 
		    CNPT_TEL, 
		    CNPT_MAIL, 
		    CNPT_ZIP, 
		    CNPT_ADDR, 
		    CNPT_DADDR, 
		    CNPT_BANK_NM, 
		    CNPT_ACTNO, 
		    CNPT_ACTNM, 
		    CNPT_CHARGER, 
		    CNPT_YN, 
		    CNPT_BRNO, 
		    CNPT_RPRSV_NM, 
		    CNPT_SE, 
		    CMNCD_CD
	  FROM CNPT
	  WHERE CNPT_ID = #{cnptId}
</select>

<!-- 거래처 수정 -->

<!-- 기본정보 수정 -->
<update id="updateBasic" parameterType="cnptVO">
	UPDATE CNPT 
		SET CNPT_NM = #{cnptNm},
			CNPT_TEL = #{cnptTel},
			CNPT_ZIP = #{cnptZip},
			CNPT_ADDR = #{cnptAddr},
			CNPT_DADDR = #{cnptDaddr},
			CNPT_YN = #{cnptYn},
			CNPT_BRNO = #{cnptBrno},
			CNPT_RPRSV_NM = #{cnptRprsvNm}, 
			CNPT_SE = #{cnptSe}, 
			CMNCD_CD = #{cmncdCd}
		WHERE CNPT_ID = #{cnptId}
</update>

<!-- 계좌정보 수정 -->
<update id="updateAct" parameterType="cnptVO">
	UPDATE CNPT 
		SET CNPT_BANK_NM = #{cnptBankNm}, 
		    CNPT_ACTNO = #{cnptActno}, 
		    CNPT_ACTNM = #{cnptActnm}
	WHERE CNPT_ID = #{cnptId}
</update>

<!-- 담당자정보 수정 -->
<update id="updateCharger" parameterType="cnptVO">
	UPDATE CNPT 
		SET CNPT_CHARGER = #{cnptCharger},
			CNPT_MAIL = #{cnptMail}
	WHERE CNPT_ID = #{cnptId}
</update>

<!-- 거래처 삭제 - 거래여부 N으로 변경 -->
<update id="cnptToN" parameterType="String">
	UPDATE CNPT
	SET CNPT_YN = 'N'
	WHERE CNPT_ID = #{cnptId}
</update>

<!-- 거래처 거래여부 Y로 변경 -->
<update id="cnptToY" parameterType="String">
	UPDATE CNPT
	SET CNPT_YN = 'Y'
	WHERE CNPT_ID = #{cnptId}
</update>

<!-- 거래중단된 거래처 조회 -->
<select id="stpList" resultType="cnptVO" parameterType="String">
	SELECT CNPT_ID, 
		    CNPT_NM, 
		    CNPT_TEL, 
		    CNPT_MAIL, 
		    CNPT_ZIP, 
		    CNPT_ADDR, 
		    CNPT_DADDR, 
		    CNPT_BANK_NM, 
		    CNPT_ACTNO, 
		    CNPT_ACTNM, 
		    CNPT_CHARGER, 
		    CNPT_YN, 
		    CNPT_BRNO, 
		    CNPT_RPRSV_NM, 
		    CNPT_SE, 
		    CMNCD_CD
	  FROM CNPT
	 WHERE 1 = 1
	 AND CNPT_YN = 'N'
	 <if test="keyWord!=null and keyWord!=''">
	   AND (
		   CNPT_ID LIKE '%'||#{keyWord}||'%'
		   OR CNPT_NM LIKE '%'||#{keyWord}||'%'
		   OR CNPT_ACTNM LIKE '%'||#{keyWord}||'%'
		   OR CNPT_CHARGER LIKE '%'||#{keyWord}||'%'
	   )
	 </if>
</select>

</mapper>
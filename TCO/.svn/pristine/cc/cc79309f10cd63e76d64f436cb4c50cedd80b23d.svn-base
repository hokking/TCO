<script>

function replaceAll(str, searchStr, replaceStr) {
	  return str.split(searchStr).join(replaceStr);
	}

	//일일정산 상신버튼 클릭시 전송

	$(function() {
// 		console.log("check:", $("#prcsum").html());
		var prcsum = $("#prcsum").html();
		var slssum = $("#slssum").html();
		
		var prcsum = replaceAll(prcsum,",","")
		var slssum = replaceAll(slssum,",","")

		var prcsum = prcsum.replace("원", "")*1; // 만들어지기 전에 접근 하셨어요!!!!
		var slssum = slssum.replace("원", "")*1;
// 		alert(prcsum)
// 		alert(slssum)
		var netIncome = (slssum*1) - (prcsum*1);

		$("#dailyCalPostBtn").on("click", function() {
			//수정 전송
			var calbrn = $("#calbrn").val();
			netIncome = slssum - prcsum
			//	 	alert("netIncome잘 들어감2???  : " + netIncome);
			//	 	alert("prcsum잘 들어감2???  : " + prcsum);
			//	 	alert("slssum잘 들어감2???  : "  + slssum);

			$.ajax({
				type : "POST",
				url : "/calculate/dailyCalInsert",
				data : {
					"prcsum" : prcsum,
					"slssum" : slssum,
					"netIncome" : netIncome,
					"calbrn" : calbrn
				},
				//contentType : "application/json; charset=utf-8",
				dataType : "text",
				success : function(data) {
					console.log("data잘 들어감? : " + data);
					if (data == "success") {
						alert("성공");
					} else {
						alert("실패");
					}
				}
			});
		});
	})
</script>


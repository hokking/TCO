		$.ajax({
			url : "/prchs/insertPrchs",
			method : "POST",
			data : prchsVO,
			dataType : "json",
			success : function(data){
				let result = parseInt(data);
				//data가 1이상일 때 
				if(result > 0){
			    	Swal.fire({
				          icon:'success',
				          title:'저장되었습니다.',
			       		}).then(function(){
			       			//새로고침
			       			window.location.reload();
			       		});
				}
			},
			error : function(xhr){
				alert(xhr.status);

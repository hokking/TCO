<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.tco.cnpt.mapper.CnptMapper">

<!-- 거래처 조회 - 검색 -->
<select id="list" resultType="cnptVO" parameterType="String">
	SELECT CNPT_ID, 
			CNPT_NM, 
			CNPT_TEL, 
			CNPT_MAIL, 
			CNPT_ZIP, 
			CNPT_ADDR, 
			CNPT_DADDR, 
			CNPT_BANK_NM, 
			CNPT_ACTNO, 
			CNPT_ACTNM, 
			CNPT_CHARGER, 
			CNPT_YN
	  FROM CNPT
	 WHERE 1 = 1
	 AND CNPT_YN = 'Y'
	 <if test="keyWord!=null and keyWord!=''">
	   AND (
		   CNPT_ID LIKE '%'||#{keyWord}||'%'
		   OR CNPT_NM LIKE '%'||#{keyWord}||'%'
		   OR CNPT_ACTNM LIKE '%'||#{keyWord}||'%'
		   OR CNPT_CHARGER LIKE '%'||#{keyWord}||'%'
	   )
	 </if>
</select>	

<!-- 거래처 등록 -->
<insert id="insert" parameterType="cnptVO">
	<selectKey order="BEFORE" keyProperty="cnptId" resultType="string">
		SELECT 'CNPT' || LPAD(NVL(MAX(TO_NUMBER(SUBSTR(NVL(CNPT_ID, 'CNPT0001'),4))),0)+1,5,'0') FROM CNPT
	</selectKey>
	INSERT INTO CNPT (
		    CNPT_ID,
		    CNPT_NM,
		    CNPT_TEL,
		    CNPT_MAIL,
		    CNPT_ZIP,
		    CNPT_ADDR,
		    CNPT_DADDR,
		    CNPT_BANK_NM,
		    CNPT_ACTNO,
		    CNPT_ACTNM,
		    CNPT_CHARGER,
		    CNPT_YN
		    
			) VALUES (
			   #{cnptId},
			   #{cnptNm},
			   #{cnptTel},
			   #{cnptMail},
			   #{cnptZip},
			   #{cnptAddr},
			   #{cnptDaddr},
			   #{cnptBankNm},
			   #{cnptActno},
			   #{cnptActnm},
			   #{cnptCharger},
			   'Y'
			)
</insert>

<!-- 거래처 상세조회 -->
<select id="detail" parameterType="String" resultType="cnptVO">
	SELECT CNPT_ID, 
			CNPT_NM, 
			CNPT_TEL, 
			CNPT_MAIL, 
			CNPT_ZIP, 
			CNPT_ADDR, 
			CNPT_DADDR, 
			CNPT_BANK_NM, 
			CNPT_ACTNO, 
			CNPT_ACTNM, 
			CNPT_CHARGER, 
			CNPT_YN
	  FROM CNPT
	  WHERE CNPT_ID = #{cnptId}
</select>

<!-- 거래처 수정 -->
<!-- <update id="update"> -->

<!-- </update> -->

<!-- 거래처 삭제 -->
<delete id="delete" parameterType="String">
	DELETE FROM CNPT
	WHERE CNPT_ID = #{cnptId}
</delete>

</mapper>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.tco.ordr.mapper.OrdrMapper">

	<!-- 수주O - 발주 테이블 목록 가져오기(상세X) -->
	<select id="rcvOrdrYList" resultType="ordrVO">
		SELECT O.ORDR_ID
		      ,O.PROD_INFO_ID
		      ,O.ORDR_QTY
		      ,O.ORDR_DT
		      ,O.BRNCOFC_ID
		      ,O.ORDR_SE
		      ,O.ORDR_YN
		      ,B.BRNCOFC_NM
		  FROM (
		         SELECT ORDR_ID
		               ,PROD_INFO_ID
		               ,ORDR_QTY
		               ,ORDR_DT
		               ,BRNCOFC_ID
		               ,ORDR_SE
		               ,ORDR_YN
		               ,ROW_NUMBER() OVER(PARTITION BY ORDR_ID ORDER BY PROD_INFO_ID DESC) AS RN
		           FROM ORDR
		       ) O, BRNCOFC B
		 WHERE O.BRNCOFC_ID=B.BRNCOFC_ID
		   AND RN = 1
		   AND ORDR_YN='Y'
		 ORDER BY ORDR_ID
	</select>
	
	<!-- 수주X - 발주 테이블 목록 가져오기(상세X) -->
	<select id="rcvOrdrNList" resultType="ordrVO">
		SELECT O.ORDR_ID
		      ,O.PROD_INFO_ID
		      ,O.ORDR_QTY
		      ,O.ORDR_DT
		      ,O.BRNCOFC_ID
		      ,O.ORDR_SE
		      ,O.ORDR_YN
		      ,B.BRNCOFC_NM
		  FROM (
		         SELECT ORDR_ID
		               ,PROD_INFO_ID
		               ,ORDR_QTY
		               ,ORDR_DT
		               ,BRNCOFC_ID
		               ,ORDR_SE
		               ,ORDR_YN
		               ,ROW_NUMBER() OVER(PARTITION BY ORDR_ID ORDER BY PROD_INFO_ID DESC) AS RN
		           FROM ORDR
		       ) O, BRNCOFC B
		 WHERE O.BRNCOFC_ID=B.BRNCOFC_ID
		   AND RN = 1
		   AND ORDR_YN='N'
		 ORDER BY ORDR_ID
	</select>
	
	<!-- 발주 아이디 별 상세 정보 뽑기 -->
	<select id="ordrDetail" parameterType="Integer" resultType="ordrVO">
		SELECT OD.ORDR_ID
			 , OD.PROD_INFO_ID
			 , OD.ORDR_QTY
			 , OD.ORDR_DT
			 , OD.BRNCOFC_ID
			 , OD.ORDR_SE
			 , OD.ORDR_YN
			 , P.PROD_INFO_NM
			 , P.PROD_INFO_PRCHS_AMT
		FROM   ORDR OD, PROD_INFO P
		WHERE  OD.PROD_INFO_ID=P.PROD_INFO_ID
		AND    OD.ORDR_ID=#{ordrId}
	</select>
	
	<!-- 발주 지점 이름 가져오기 -->
	<select id="brnofcNm" parameterType="String" resultType="String">
		SELECT BRNCOFC_NM
		  FROM BRNCOFC
		 WHERE BRNCOFC_ID=#{brncofcId}
	</select>
	
	<!-- 수주X에서 O로 바꾸기 -->
	<update id="rcvNtoY" parameterType="Integer">
		UPDATE ORDR
		   SET ORDR_YN='Y'
		 WHERE ORDR_ID=#{ordrId}
	</update>
	
	<!-- 발주번호 max 찾기 -->
	<select id="ordrMax" resultType="Integer">
		SELECT MAX(ORDR_ID)+1 AS MAX
		FROM   ORDR
	</select>
	
	<!-- 부족재고현황에서 발주시 insert -->
	<insert id="lackInsert" parameterType="hashMap">
		INSERT INTO ORDR (
		    ORDR_ID
		   ,PROD_INFO_ID
		   ,ORDR_QTY
		   ,ORDR_DT
		   ,BRNCOFC_ID
		   ,ORDR_SE
		   ,ORDR_YN
		) VALUES (
		    #{ordrId}
		   ,#{prodInfoId}
  		   ,#{ordrQty}
		   ,SYSDATE
		   ,#{brncofcId}
		   ,'내역'
		   ,'N'
		)
	</insert>
	

</mapper>